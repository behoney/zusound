{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "declaration": true,
        "declarationDir": "./dist",
        "emitDeclarationOnly": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "noImplicitAny": false,
        "outDir": "./dist",
        "paths": {
            "zusound": [
                "./packages/index"
            ]
        }
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "examples/**/*",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}